@model TechForum.Web.ViewModels.Categories.CategoryViewModel
@{
    this.ViewData["Title"] = Model.Title;
}
<div class="text-center">
    <h1 class="display-3">@Model.Title</h1>
</div>

@foreach (var post in Model.ForumPosts)
{
    <div class="media-body ">
        <h4 class="media-heading"><a asp-controller="Posts" asp-action="ById" asp-route-id="@post.Id" style="color:inherit">@post.Title </a></h4>
        <p>@post.Preview</p>
        <ul class="list-inline list-unstyled text-right">
            <li class="list-inline-item">
                <i class="fas fa-user"></i> @post.AuthorUserName
            </li>
            <li class="list-inline-item">
                <i class="fas fa-calendar-alt"></i> @post.CreatedOn
            </li>
            <li class="list-inline-item">
                <i class="fas fa-comment-dots"></i> @post.CommentsCount comments
            </li>


        </ul>
    </div>

}
<nav>
    <ul class="pagination">
        @if (this.Model.CurrentPage == 1)
        {
            <li class="page-item disabled justify-content-center">
                <a class="page-link" href="#">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item justify-content-center">
                <a class="page-link"  style="color:inherit"
                   asp-route="forumCategory"
                   asp-route-name="@this.Model.Title"
                   asp-route-page="@(this.Model.CurrentPage - 1 )">Previous</a>
            </li>
        }
        @for (int i = 1; i <= Model.PagesCount; i++)
        {
            var active = i == this.Model.CurrentPage ? "active" : string.Empty;
            <li class="page-item @active" >
                <a class="page-link" style="color:inherit"
                   asp-route="forumCategory"
                   asp-route-name="@this.Model.Title"
                   asp-route-page="@i">@i</a>
            </li>
        }
        @if (this.Model.CurrentPage == this.Model.PagesCount)
        {
            <li class="page-item disabled justify-content-center">
                <a class="page-link" href="#">Next</a>
            </li>
        }
        else
        {
            <li class="page-item justify-content-center">
                <a class="page-link"  style="color:inherit"
                   asp-route="forumCategory"
                   asp-route-name="@this.Model.Title"
                   asp-route-page="@(this.Model.CurrentPage + 1 )">Next</a>
            </li>
        }
     


    </ul>
</nav>
