@model TechForum.Web.ViewModels.Posts.SearchViewModel
@{
    this.ViewData["Title"] = Model.SearchString;
}

@if (Model.FoundPosts.Any())
{<div class="text-center">
    <h1 class="display-3">Searching for @Model.SearchString ...</h1>
</div>
    @foreach (var post in Model.FoundPosts)
    {
        <div class="media-body">
            <h4 class="media-heading"><a asp-controller="Posts" asp-action="ById" asp-route-id="@post.Id">@post.Title</a></h4>
            <p>@post.Preview</p>
            <ul class="list-inline list-unstyled text-right">
                <li class="list-inline-item">
                    <i class="fas fa-user"></i> @post.AuthorUserName
                </li>
                <li class="list-inline-item">
                    <i class="fas fa-calendar-alt"></i> @post.CreatedOn
                </li>
                <li class="list-inline-item">
                    <i class="fas fa-comment-dots"></i> @post.CommentsCount comments
                </li>
                <li class="list-inline-item">
                    <i class="fas fa-share-alt"></i> Share
                </li>

            </ul>
        </div>

    }}
else { 
<div class="text-center">
    <h1 class="display-3">Nothing found</h1>
</div>
};
